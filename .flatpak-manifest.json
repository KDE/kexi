{
    "id": "org.kde.kexi",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-25.08",
    "sdk": "org.kde.Sdk",
    "command": "kexi-3.3",
    "tags": [
        "nightly"
    ],
    "rename-desktop-file": "org.kde.kexi-3.3.desktop",
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "modules": [
        {
            "name": "breeze-icons",
            "config-opts": [
                "-DSKIP_INSTALL_ICONS=ON"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/frameworks/breeze-icons.git",
                    "tag": "v6.20.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    },
                    "commit": "f1b33eb4d9ae32f8852209e00ab5ffbafbd8da96"
                }
            ]
        },
        {
            "name": "kdb",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kdb.git"
                }
            ]
        },
        {
            "name": "kproperty",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kproperty.git"
                }
            ]
        },
        {
            "name": "kreport",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kreport.git"
                }
            ]
        },
        {
            "name": "kexi",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
